<Page x:Class="DarkwoodEditorWPF.Views.PlayerStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DarkwoodEditorWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="PlayerStats">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/BaseDictionary.xaml"/>
                <ResourceDictionary Source="../Styles/ScrollBarDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Border Grid.Column="1"
                Margin="10"
                Padding="10" 
                Background="#2d2d30" 
                CornerRadius="5,5,5,5">
            <ScrollViewer Style="{StaticResource scrollViewer}">
                <StackPanel Margin="8,0,8,0">
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Health" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding Health}" 
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3"/>
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Stamina" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding Stamina}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Experience" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding Experience}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Current level" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding CurrentLevel}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Health upgrades" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding HealthUpgrades}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Stamina upgrades" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding StaminaUpgrades}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Hotbar upgrades" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding HotbarUpgrades}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Inventory upgrades" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding InventoryUpgrades}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Last time ate" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding LastTimeAte}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Saturation" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding Saturation}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Fed today" Style="{StaticResource ItemLbl}"/>

                        <CheckBox IsChecked="{Binding FedToday}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Lifes" Style="{StaticResource ItemLbl}"/>

                        <TextBox Text="{Binding Lifes}"
                                 Style="{StaticResource ItemTxtBox}"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Recipes" Style="{StaticResource ItemLbl}"/>

                        <Button x:Name="recipesBtn"
                                Style="{StaticResource IcEditBtn}"
                                Click="recipesBtn_Click"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Crafted Items" Style="{StaticResource ItemLbl}"/>

                        <Button x:Name="craftedItemsBtn"
                                Style="{StaticResource IcEditBtn}"
                                Click="craftedItemsBtn_Click"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Player Effects" Style="{StaticResource ItemLbl}"/>

                        <Button x:Name="playerEffectsBtn"
                                Style="{StaticResource IcEditBtn}"
                                Click="playerEffectsBtn_Click"/>

                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Got hit at least once" Style="{StaticResource ItemLbl}"/>

                        <CheckBox IsChecked="{Binding GotHitAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Died at least once" Style="{StaticResource ItemLbl}"/>

                        <CheckBox IsChecked="{Binding diedAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Style="{StaticResource ItemContainer}">

                        <Label Content="Skills" Style="{StaticResource ItemLbl}"/>

                        <Button x:Name="skillsBtn"
                                Style="{StaticResource IcEditBtn}" 
                                Click="skillsBtn_Click"/>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
