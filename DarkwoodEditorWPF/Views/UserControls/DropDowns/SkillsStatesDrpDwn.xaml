<UserControl x:Class="DarkwoodEditorWPF.Views.UserControls.DropDowns.SkillsStatesDrpDwn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DarkwoodEditorWPF.Views.UserControls.DropDowns"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/BaseDictionary.xaml"/>
                <ResourceDictionary Source="../../../Styles/ScrollBarDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#FF505050" 
            Margin="20,4,8,4"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <TextBlock x:Name="drpDown"
                           Text="Skill States" 
                           VerticalAlignment="Center" 
                           Margin="22,0,0,0"/>

                <Button x:Name="openDropdownBtn"
                        Style="{DynamicResource DropdownBtn}"
                        Height="12"
                        Width="12" 
                        HorizontalAlignment="Right"
                        Margin="0,0,22,0" Click="openDropdownBtn_Click"/>
            </DockPanel>

            <ItemsControl x:Name="drpDwnContent" 
                          ItemsSource="{Binding SkillsStates}"
                          Grid.Row="1" 
                          Margin="10,0,10,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                            <DockPanel Style="{StaticResource ItemContainer}">

                                <TextBlock x:Name="drpDwnTxtBlk"
                                           Text="{Binding Type, Mode=TwoWay}"
                                           Margin="12,0,0,0"
                                           Style="{StaticResource ItemTxtBlk}"/>

                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Times Used:"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource ItemTxtBlk}"
                                               Margin="0,0,6,0"/>
                                    <TextBox x:Name="drpDwnTxtBox"
                                             Text="{Binding TimesUsed, Mode=TwoWay}"
                                             HorizontalAlignment="Right"
                                             Width="120" 
                                             Margin="0,0,12,0"/>
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
