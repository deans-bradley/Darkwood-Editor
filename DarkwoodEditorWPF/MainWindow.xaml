<Window x:Class="DarkwoodEditorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarkwoodEditorWPF"
        mc:Ignorable="d"
        Title="Darkwood Editor" Height="450" Width="800" Background="#FF3C3C3C" Foreground="#FFCCCCCC" Icon="/icon.png">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BaseDictionary.xaml"/>
                <ResourceDictionary Source="ScrollBarDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/mainFormBg.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="File" 
                      Width="42" 
                      Height="20">
                <MenuItem Header="Open File" Click="MenuItem_Click"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Close"/>
            </MenuItem>

            <MenuItem Header="Tools" 
                      Width="42" 
                      Height="20">
                <MenuItem Header="Player"/>
                <MenuItem Header="World"/>
                <MenuItem Header="Story"/>
                <MenuItem Header="Time and Weather"/>
            </MenuItem>

            <MenuItem Header="Help" 
                      Width="42" 
                      Height="20">
                <MenuItem Header="About"/>
                <MenuItem Header="How to"/>
                <MenuItem Header="License"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="279.808"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <Label Content="Major version: " 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                    <Label x:Name="majVerLbl"
                           Content="{Binding MajorVersion}" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Content="Minor version: " 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                    <Label x:Name="minVerLbl"
                           Content="{Binding MinorVersion}" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Content="Major version compatibility: " 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                    <Label x:Name="majVerComLbl"
                           Content="{Binding MajorVersionCompatibility}" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <Label Content="Minor version compatibility: " 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                    <Label x:Name="minVerComLbl"
                       Content="{Binding MinorVersionCompatibility}" 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Content="RC version: " 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                    <Label x:Name="rvVerLbl"
                       Content="{Binding RCVersion}" 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Label Content="RC version compatibility: " 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                    <Label x:Name="rcVerComLbl"
                       Content="{Binding RCVersionCompatibility}" 
                       FontSize="11" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                </StackPanel>
            </StackPanel>
            
            <Border Grid.Column="1"
                    Margin="10"
                    Padding="10" 
                    Background="#2d2d30" CornerRadius="5,5,5,5">
                <ScrollViewer>
                    <StackPanel>
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="healthLbl" 
                           Content="Health" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="healthTxtBox" 
                                 Text="{Binding Health}" 
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="staminaLbl" 
                           Content="Stamina" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="staminaTxtBox" 
                                 Text="{Binding Health}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="experienceLbl" 
                           Content="Experience" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="experienceTxtBox" 
                                 Text="{Binding Experience}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="currentLevelLbl" 
                           Content="Current level" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="currentLevelTxtBox" 
                                 Text="{Binding CurrentLevel}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="healthUpgradesLbl" 
                           Content="Health upgrades" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="healthUpgradesTxtBox" 
                                 Text="{Binding HealthUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="staminaUpgradesLbl" 
                           Content="Stamina upgrades" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="staminaUpgradesTxBtox" 
                                 Text="{Binding StaminaUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="hotbarUpgradesLbl" 
                           Content="Hotbar upgrades" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="hotbarUpgradesTxtBox" 
                                 Text="{Binding HotbarUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="inventoryUpgrades" 
                           Content="Inventory upgrades" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="inventoryUpgradesTxtBox" 
                                 Text="{Binding InventoryUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="lastTimeAteLbl" 
                           Content="Last time ate" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="lastTimeAteTxtBox" 
                                 Text="{Binding LastTimeAte}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="saturationLbl" 
                           Content="Saturation" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <TextBox x:Name="saturationTxtBox" 
                                 Text="{Binding Saturation}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="fedTodayLbl" 
                           Content="Fed today" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                            <CheckBox x:Name="fedTodayChkBox"
                                  IsChecked="{Binding FedToday}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="lifesLbl" 
                               Content="Lifes" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                            <TextBox x:Name="lifesTxtBox" 
                                 Text="{Binding Lifes}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="gotHitAtLeastOnceLbl" 
                               Content="Got hit at least once" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                            <CheckBox x:Name="gotHitAtLeastOnceChkBox"
                                  IsChecked="{Binding GotHitAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        </DockPanel>
                        <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                        <DockPanel Margin="0,5,0,5">
                            <Label x:Name="diedAtLeastOnceLbl" 
                               Content="Died at least once" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                            <CheckBox x:Name="diedAtLeastOnceChkBox"
                                  IsChecked="{Binding diedAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        </DockPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
