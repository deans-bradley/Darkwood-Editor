<UserControl x:Class="DarkwoodEditorWPF.Views.UserControlItems.SkillItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DarkwoodEditorWPF.Views.UserControlItems"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/BaseDictionary.xaml"/>
                <ResourceDictionary Source="../../Styles/ScrollBarDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">
            <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
            <DockPanel Style="{StaticResource ItemContainer}">

                <Label Content="Label" Style="{StaticResource ItemLbl}"/>

                <TextBox Style="{StaticResource ItemTxtBox}" Margin="0,0,12,0"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
