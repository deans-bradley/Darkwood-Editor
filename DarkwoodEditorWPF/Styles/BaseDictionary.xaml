    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF3C3C3C"/>
        <Setter Property="Foreground" Value="#FFDFDFDF"/>
        <Setter Property="SelectionBrush" Value="#FFDFDFDF"/>
        <Setter Property="CaretBrush" Value="#FFDFDFDF"/>
        <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="24" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#FFDFDFDF"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Label Style for PlayerStatsPage -->
    <Style x:Key="psLbl" TargetType="Label">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
   
    <!-- TextBox Style for PlayerStatsPage -->
    <Style x:Key="psTxtBox" TargetType="TextBox">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="#FF3C3C3C"/>
        <Setter Property="Foreground" Value="#FFDFDFDF"/>
        <Setter Property="SelectionBrush" Value="#FFDFDFDF"/>
        <Setter Property="CaretBrush" Value="#FFDFDFDF"/>
        <Setter Property="BorderBrush" Value="#FF3C3C3C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#FFDFDFDF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Button Style for PlayerStatsPage -->
    <Style x:Key="psBtn" TargetType="Button">
        <Setter Property="Background" Value="#FF585858"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#FF585858"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Content" Value="Edit"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF767676"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

