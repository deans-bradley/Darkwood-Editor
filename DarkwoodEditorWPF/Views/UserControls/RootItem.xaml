<UserControl x:Class="DarkwoodEditorWPF.Views.UserControls.RootItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DarkwoodEditorWPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="400" Background="#FF3D3D3D">
    <Border BorderThickness="0,0.5,0,0" BorderBrush="Black">
        <DockPanel>
            <Label x:Name="nameLbl" 
                   Content="Name" 
                   FontSize="11" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"/>

            <TextBox x:Name="valueTxtBox" 
                     Width="200"
                     FontSize="11" 
                     FontWeight="Bold" 
                     Foreground="White" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Center"
                     Margin="0,0,20,0"/>
        </DockPanel>
    </Border>
</UserControl>
