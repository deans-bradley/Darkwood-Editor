<Page x:Class="DarkwoodEditorWPF.Views.MainContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DarkwoodEditorWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainContent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="450"/>
            <ColumnDefinition MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- <controls:RootUserControl x:Name="rootUserControl" DataContext="{Binding DataContext, ElementName=MainWindow}"/> -->

        <Frame Grid.Column="0" x:Name="contentLeft" NavigationUIVisibility="Hidden" DataContext="{Binding DataContext}"/>

        <Frame Grid.Column="1" x:Name="contentRight" NavigationUIVisibility="Hidden" DataContext="{Binding DataContext}"/>
    </Grid>
</Page>
