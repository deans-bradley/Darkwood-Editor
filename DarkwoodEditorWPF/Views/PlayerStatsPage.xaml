<Page x:Class="DarkwoodEditorWPF.Views.PlayerStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DarkwoodEditorWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerStats">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../BaseDictionary.xaml"/>
                <ResourceDictionary Source="../ScrollBarDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Border Grid.Column="1"
                Margin="10"
                Padding="10" 
                Background="#2d2d30" CornerRadius="5,5,5,5">
            <ScrollViewer>
                <StackPanel>
                    <DockPanel Margin="0,5,0,5">

                        <Label Content="Health" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding Health}" 
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0" 
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Stamina" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding Stamina}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Experience" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding Experience}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Current level" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding CurrentLevel}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Health upgrades" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding HealthUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Stamina upgrades" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding StaminaUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Hotbar upgrades" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding HotbarUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Inventory upgrades" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="21,0,0,0"/>

                        <TextBox Text="{Binding InventoryUpgrades}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Last time ate" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding LastTimeAte}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Saturation" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding Saturation}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="DoubleTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Fed today" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <CheckBox IsChecked="{Binding FedToday}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Lifes" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <TextBox Text="{Binding Lifes}"
                                 Width="200"
                                 FontSize="11" 
                                 FontWeight="Bold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"
                                 PreviewTextInput="IntTextBox_PreviewTextInput"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Recipes" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <Button x:Name="recipesBtn"
                                Width="50" 
                                Content="Edit" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center" 
                                Margin="0,0,20,0" 
                                Click="recipesBtn_Click"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Crafted Items" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <Button x:Name="craftedItemsBtn"
                                Width="50" 
                                Content="Edit" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center" 
                                Margin="0,0,20,0" 
                                Click="craftedItemsBtn_Click"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">

                        <Label Content="Player Effects" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <Button x:Name="playerEffectsBtn"
                                Width="50" 
                                Content="Edit" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center" 
                                Margin="0,0,20,0" Click="playerEffectsBtn_Click"/>

                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Got hit at least once" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <CheckBox IsChecked="{Binding GotHitAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        
                    </DockPanel>
                    <Rectangle Fill="Black" Height="0.5" Opacity="0.3" />
                    <DockPanel Margin="0,5,0,5">
                        
                        <Label Content="Died at least once" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                        <CheckBox IsChecked="{Binding diedAtLeastOnce}"
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0"/>
                        
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
